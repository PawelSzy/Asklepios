<% provide(:title, 'Zapisz sie') %>
<h1>Zapisz sie</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= form_for(@pacjent) do |f| %>
      <%= f.label :imie %>
      <%= f.text_field :imie %>

      <%= f.label :nazwisko %>
      <%= f.text_field :nazwisko %>

      <%= f.label :haslo %>
      <%= f.password_field :password %>

      <%= f.label :potwierdzenie_hasla, "Potwierdzenie" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :pesel %>
      <%= f.text_field :pesel %>

      <%= f.label :notatki %>
      <%= f.text_field :notatki %>


      <%= f.submit "Utworz moje haslo", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>