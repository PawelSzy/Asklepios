<% provide(:title, 'Zapisz sie') %>
<h1>Zapisz sie</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= form_for(@pacjent) do |f| %>
      <%= f.label :imie %><br>
      <%= f.text_field :imie %><br>

      <%= f.label :nazwisko %><br>
      <%= f.text_field :nazwisko %><br>

      <%= f.label :haslo %><br>
      <%= f.password_field :password %><br>

      <%= f.label :potwierdzenie_hasla, "Potwierdzenie" %><br>
      <%= f.password_field :password_confirmation %><br>

      <%= f.label :email %><br>
      <%= f.email_field :email %><br>

      <%= f.label :pesel %><br>
      <%= f.text_field :pesel %><br>

      <%= f.label :notatki %><br>
      <%= f.text_area :notatki %><br>


      <%= f.submit "Zapisz dane", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>